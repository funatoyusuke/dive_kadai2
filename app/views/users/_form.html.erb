<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  
  <div>
    名前　　　　　
    <%= f.text_field :name %>
  </div>
  <div>
    メールアドレス
    <%= f.email_field :email %>
  </div>
  <div>
    パスワード　　
    <%= f.password_field :password %>
  </div>
  <div>
    パスワード確認
    <%= f.password_field :password_confirmation %>
  </div>
  
   <div class="field">
    <%= f.label :アイコン %>
    <div id="icon"><%= image_tag(@user.image.url, :size =>'160x160') if @user.image.url %></div>
    <%= f.file_field :image %>
  </div>
  
  <br>
  <%= f.submit "アカウントの作成" %>
<% end %>